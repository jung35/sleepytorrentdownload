<%

function getSimpleByte(num) {
  if(num > 1073741824) {
    num = parseFloat(num / 1073741824.0).toFixed(2) + ' GB';
  } else if(num > 1048576) {
    num = parseFloat(num / 1048576.0).toFixed(2) + ' MB';
  } else if(num > 1024) {
    num = parseFloat(num / 1024.0).toFixed(2) + ' KB';
  } else {
    num += ' B';
  }

  return num;
}

%><!DOCTYPE html>
